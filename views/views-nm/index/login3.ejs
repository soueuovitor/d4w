						<div class="row">
						
							
								
							<div class="col-sm-6" id="c-login">
									
								<form id="login-form"  action="/login" method="post" role="form" style="display: block;">

								<h1 style="margin: 10px;">Login</h1>
								
									<div class="form-group">
										
										<input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Username :admin" value="admin">
									</div>
									<div class="form-group">
									
										<input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Password :q1w2e3r4t5" value="q1w2e3r4t5">
										
									</div>
									
									
									<div class="form-group">
										<div class="row">
			<div class="col-sm-12">
												<input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In">
											</div>

										</div>
									</div>
									
									
								</form>
								</div>
								
								<div class="col-sm-6 my-auto" id="d-login">		 				

										<div style="height: 104px;">
												<% if (errors2.length) { %>  
												   <div class="alert alert-danger">
													   <ul>
													   <% for (var e of errors2) { %>
														   <li><%= e.msg %></li>
													   <% }%>
													   </ul>
												   </div>
											   <% } %></div>
							</div>
							<div class="col-sm-6" id= "c-regi"  style= "display: none">
								
									<form  id="register-form" action="/login/regi" method="post" role="form" style="display: active;">
										<h1 href="#" class="active" id="login-form-link" style="margin: 10px;">Registo</h1>
									 
										 <div class="form-group">
												
										 <span class="glyphicons glyphicons-user"></span>
											 <input type="text" name="user_participante" id="user_participante" tabindex="1" class="form-control" placeholder="Username" value="">
										 </div>
										 <div class="form-group">
											 <input type="email" name="email_participante" id="email_participante" tabindex="1" class="form-control" placeholder="Email" value="">
										 </div>
										 <div class="form-group">
											 <input type="password" name="password_participante" id="password_participante" tabindex="2" class="form-control" placeholder="Password">
										 </div>
										 <div class="form-group">
											 <input type="text" name="nome_participante" id="nome_participante" tabindex="2" class="form-control" placeholder="name">
										 </div>
										 <div class="form-group">
											 <input type="text" name="nif_participante" id="nif_participante" tabindex="2" class="form-control"  pattern="[0-9]{9}" placeholder="nif">
										 </div>
										 <div class="form-group">
											 <div class="row">
												 <div class="col-sm-12">
													 <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Registar Agora">
												 </div>
												 </div>
											 </div>
										 
									 </form>
								</div>
								
								<div class="col-sm-6 my-auto" id="d-regi"  style= "display: none">		 				
										<div class="form-group">
												<div style="height: 150px;">
														<% if (errors.length) { %>  
														   <div class="alert alert-danger">
															   <ul>
															   <% for (var e of errors) { %>
																   <li><%= e.msg %></li>
															   <% }%>
															   </ul>
														   </div>	
													   <% } %></div>
								
							</div>
								
							</div>
					</div>
						</div>
						</div>
			
							 
				
	</div>
