 <!-- /. ROW  -->
 <hr />
 <div class="row">  
 <div class="col-md-offset-3">                   
		<div class="col-md-6">
				<script type="text/javascript">
					function removeRecord() {
						if (confirm('Pretende mesmo eliminar?')) {
							window.location.replace("<%= '/speaker/' + speaker.id_speaker + '/delete'%>")
							
						}
					}
				</script>
			
				<h2><%= speaker.nome_speaker %></h2>   
				<% if (errors.length) { %>  
					<div class="alert alert-danger">
						<ul>
						<% for (var e of errors) { %>
							<li><%= e.msg %></li>
						<% }%>
						</ul>
					</div>	
				<% } %>	
			
				<form class="form" method="post" encType="multipart/form-data">
					<div class="form-group">
				  <label for="nome_speaker">Nome:</label>
                  <input type="text" class="form-control" id="nome_speaker" placeholder="Nome" name="nome_speaker" value="<%= speaker.nome_speaker %>">
                  <label for="telefone">Telefone:</label>
                  <input type="text" class="form-control" id="telefone" placeholder="Telefone" name="telefone" value="<%= speaker.telefone %>">
                  <label for="NIF_speaker">NIF:</label>
				  <input type="text" class="form-control" id="NIF_speaker" placeholder="NIF" name="NIF_speaker" value="<%= speaker.NIF_speaker %>">
				  <label for="cache_speaker">Valor:</label>
				  <input type="text" class="form-control" id="cache_speaker" placeholder="Cache" name="cache_speaker" value="<%= speaker.cache_speaker %>">
					<input class="form-registos-sm" type="file" name="sampleFile" />
				</div>
					
					
				<button type="submit" class="btn btn-default">Save</button>
					<% if (! isNew) { %>
						<button type="button" class="btn btn-danger" onclick="removeRecord()">Delete</button>
					<% } %>
					
			  </form>      
				  
			   </div>
			   </div>
 

</div>
