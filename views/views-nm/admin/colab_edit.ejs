<div id="page-wrapper" >
<div id="page-inner">
<div class="row">
    <div class="col-md-12">
     <h2>Colaborador</h2>   
        
       
    </div>
</div>
 <!-- /. ROW  -->
 <hr />
 <div class="row">  
 <div class="col-md-offset-3">                   
		<div class="col-md-6">
				<script type="text/javascript">
					function removeRecord() {
						if (confirm('Pretende mesmo eliminar?')) {
							window.location.replace("<%= '/colaborador/' + colaborador.user_colaborador + '/delete'%>")
							
						}
					}
				</script>
			
				<h2><%= colaborador.user_colaborador %></h2>   
				<% if (errors.length) { %>  
					<div class="alert alert-danger">
						<ul>
						<% for (var e of errors) { %>
							<li><%= e.msg %></li>
						<% }%>
						</ul>
					</div>	
				<% } %>	
			
				<form class="form" method="post">
					<div class="form-group">
				  <label for="nome_colaborador">Nome:</label>
                  <input type="text" class="form-control" id="nome_colaborador" placeholder="Nome" name="nome_colaborador" value="<%= colaborador.nome_colaborador %>">
                  <label for="telefone_colaborador">Telefone:</label>
                  <input type="text" class="form-control" id="telefone_colaborador" placeholder="Telefone" name="telefone_colaborador" value="<%= colaborador.telefone_colaborador %>">
                  <label for="email_colaborador">Email:</label>
				  <input type="text" class="form-control" id="email_colaborador" placeholder="Email" name="email_colaborador" value="<%= colaborador.email_colaborador %>">
				  <label for="salario_colaborador">Salário:</label>
				  <input type="text" class="form-control" id="salario_colaborador" placeholder="Salario" name="salario_colaborador" value="<%= colaborador.salario_colaborador %>">
                  <label for="funcao_colaborador">Função:</label>
				  <input type="text" class="form-control" id="funcao_colaborador" placeholder="Funcao" name="funcao_colaborador" value="<%= colaborador.funcao_colaborador %>">
                  </div>
					
					
				<button type="submit" class="btn btn-default">Save</button>
					<% if (! isNew) { %>
						<button type="button" class="btn btn-danger" onclick="removeRecord()">Delete</button>
					<% } %>
					
			  </form>      
				  
			   </div>
			   </div>
 

</div>
<div class="row">




</div>
 
 
 <!-- /. ROW  -->


