<div id="page-wrapper" >
<div id="page-inner">
<div class="row">
    <div class="col-md-12">
     <h2>Participante</h2>   
        
       
    </div>
</div>
 <!-- /. ROW  -->
 <hr />
 <div class="row">  
 <div class="col-md-offset-3">                   
		<div class="col-md-6">
				<script type="text/javascript">
					function removeRecord() {
						if (confirm('Pretende mesmo eliminar?')) {
							window.location.replace("<%= '/participante/' + participante.user_participante + '/delete'%>")
							
						}
					}
				</script>
			
				<h2><%= participante.user_participante %></h2>   
				<% if (errors.length) { %>  
					<div class="alert alert-danger">
						<ul>
						<% for (var e of errors) { %>
							<li><%= e.msg %></li>
						<% }%>
						</ul>
					</div>	
				<% } %>	
			
				<form class="form" method="post">
					<div class="form-group">
				  <label for="nome_participante">Nome:</label>
                  <input type="text" class="form-control" id="nome_participante" placeholder="Nome" name="nome_participante" value="<%= participante.nome_participante %>">
                  <label for="nif_participante">NIF:</label>
                  <input type="text" class="form-control" id="nif_participante" placeholder="NIF" name="nif_participante" value="<%= participante.nif_participante %>">
                  <label for="email_participante">Email:</label>
				  <input type="text" class="form-control" id="email_participante" placeholder="Email" name="email_participante" value="<%= participante.email_participante %>">
                  </div>
					
					
				<button type="submit" class="btn btn-default">Save</button>
					<% if (! isNew) { %>
						<button type="button" class="btn btn-danger" onclick="removeRecord()">Delete</button>
					<% } %>
					
			  </form>      
				  
			   </div>
			   </div>
 

</div>
